{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "plugins": [
    "mocha"
  ],
  "extends": [
    "eslint:recommended",
    "airbnb-base"
  ],
  "env": {
    "mocha": true,
    "node":  true,
    "es6":   true
  },
  "rules": {
    "comma-dangle": 0,
    "arrow-body-style": ["error", "always"],
    "strict": [0, "global"],
    "mocha/no-exclusive-tests": "error"
  }
}